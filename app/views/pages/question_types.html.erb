<link rel="stylesheet" href="path/to/bootstrap.css">
<link rel="stylesheet" href="path/to/bootstrap-icons.css">

<h1 class="text-center">Questions</h1>
  <div class="mt-2 text-center">
    <%= link_to "<i class='bi bi-file-earmark-plus'></i> Create a new Question".html_safe, new_question_path, class: "btn btn-success btn-lg btn-block mb-2" %>
  </div>

  <div class="text-center mb-2">
    <h3>Choose a Question Type</h3>
    <%= link_to 'Essay', question_types_path(type: 'Essay'), class: 'btn btn-primary', style: "border-radius: 5px;" %>
    <%= link_to 'Matching', question_types_path(type: 'Matching'), class: 'btn btn-primary', style: "border-radius: 5px;" %>
    <%= link_to 'Multiple Choice', question_types_path(type: 'Multiple Choice'), class: 'btn btn-primary', style: "border-radius: 5px;" %>
    <%= link_to 'Multiple Answer', question_types_path(type: 'Multiple Answer'), class: 'btn btn-primary', style: "border-radius: 5px;" %>
    <%= link_to 'True/False', question_types_path(type: 'True/False'), class: 'btn btn-primary', style: "border-radius: 5px;" %>
  </div>
  
<% if defined?(@questions) %>
  <div id="questions">
    <% @questions.each do |question| %>
      <div class="d-flex justify-content-between align-items-center pl-4 px-4 mt-3">
        <%= render question %>
        <%= link_to "<i class='bi bi-info-circle'></i> Details".html_safe, question, class: "btn btn-info mb-2 border-radius: 5px;" %>
      </div>
    <% end %>
  </div>
<% end %>