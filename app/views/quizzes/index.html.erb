<link rel="stylesheet" href="path/to/bootstrap.css">
<link rel="stylesheet" href="path/to/bootstrap-icons.css">

<p style="color: green"><%= notice %></p>

<h1 class="text-center">Quizzes</h1>

<div class="text-center">
  <%= link_to "<i class='bi bi-file-earmark-plus'></i> Create a new Quiz".html_safe, pre_new_quiz_path, class: "btn btn-success mb-2 btn-lg btn-block" %>
</div>

<div id="quizzes" class="row mt-3">
  <% @quizzes.each_slice(2) do |quizzes_batch| %>
    <div class="quizzes-container">
      <% quizzes_batch.each do |quiz| %>
        <div class="col-md-6 mx-auto">
          <div class="card mb-4">
            <div class="card-body">
              <%= render quiz %>
              <div class="d-flex justify-content-center mt-2">
                <%= link_to "<i class='bi bi-info-circle'></i> Details".html_safe, quiz, class: "btn btn-info", style: "border-radius: 5px;" %>
                <%= link_to "<i class='bi bi-pencil'></i> Edit".html_safe, edit_quiz_path(quiz), class: "btn btn-warning", style: "border-radius: 5px; margin-left: 5px;" %>
                <%= button_to "<i class='bi bi-trash'></i> Delete".html_safe, quiz, method: :delete, class: "btn btn-danger", style: "border-radius: 5px; margin-left: 5px;" %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
  